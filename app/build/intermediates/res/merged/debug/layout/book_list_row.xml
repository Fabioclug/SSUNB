<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/book_list_row_icon"
            android:layout_width="@dimen/book_list_icon"
            android:layout_height="@dimen/book_list_icon"
            android:src="@android:drawable/ic_menu_agenda"
            />

        <TextView
            android:id="@+id/book_list_row_name"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center"
            android:textSize="20sp"
            android:layout_toRightOf="@id/book_list_row_icon"/>

        <TextView
            android:id="@+id/book_list_row_author"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:layout_toRightOf="@id/book_list_row_icon"
            android:layout_below="@id/book_list_row_name"/>

    </RelativeLayout>

</LinearLayout><!-- From: file:/home/breno/Ãrea%20de%20Trabalho/MDS/SSUNB/app/src/main/res/layout/book_list_row.xml -->